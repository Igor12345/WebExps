@model IEnumerable<BookViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Authors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllAuthors)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Book.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Book.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Book.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
